# ===============================================
# AI CONVERSATIONAL INTERVIEWER - ENVIRONMENT TEMPLATE
# ===============================================
# Copy this file to .env and replace placeholder values with your actual configuration
# cp .env.example .env

# ===============================================
# üåç CORE APPLICATION SETTINGS
# ===============================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
APP_NAME="AI Conversational Interviewer"
APP_VERSION=1.0.0

# ===============================================
# üîê SECURITY & AUTHENTICATION (REQUIRED)
# ===============================================
# Generate secure secrets with: openssl rand -base64 32
APP_SECRET=your-super-secret-app-key-change-this-in-production-256-bits
JWT_SECRET=your-jwt-secret-key-256-bits-minimum-length-required-change-this
SESSION_SECRET=your-session-secret-key-for-express-sessions-change-this
ENCRYPTION_KEY=your-encryption-key-32-bytes-for-aes-256-encryption-change-this
NEXTAUTH_SECRET=your-nextauth-secret-for-authentication-change-this
NEXTAUTH_URL=http://localhost:3000

# Password encryption settings
BCRYPT_ROUNDS=12

# ===============================================
# üóÑÔ∏è DATABASE CONFIGURATION (REQUIRED)
# ===============================================
# Primary PostgreSQL Database - Replace with your database credentials
DATABASE_URL=postgresql://username:password@localhost:5432/ai_interviewer
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_TIMEOUT=30000
DB_SSL=false

# Prisma settings
PRISMA_CLI_QUERY_ENGINE_TYPE=binary

# ===============================================
# üöÄ REDIS CACHE & SESSION STORE (REQUIRED)
# ===============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# Redis Cluster (optional for production)
REDIS_CLUSTER=false
REDIS_CLUSTER_NODES=

# ===============================================
# ü§ñ AI & ML SERVICES (REQUIRED)
# ===============================================

# OpenAI Configuration (Primary AI Provider) - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-organization-id
OPENAI_MODEL_GPT4=gpt-4-turbo-preview
OPENAI_MODEL_GPT35=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT=30000

# Azure OpenAI (Alternative Provider) - Optional
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Anthropic Claude (Alternative Provider) - Optional
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# Hugging Face (For specialized models) - Optional
HUGGINGFACE_API_KEY=
HUGGINGFACE_ENDPOINT=https://api-inference.huggingface.co

