# =============================================================================
# PERFORMANCE & MONITORING (Phase 8 - Advanced Features)
# =============================================================================
# Application Performance Monitoring (Optional but recommended for production)
# New Relic
# NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
# NEW_RELIC_APP_NAME=AI-Interviewer-Platform

# Sentry (Error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10
LOG_RETENTION_DAYS=30

# =============================================================================
# SECURITY & COMPLIANCE (Phase 8 - Advanced Features)
# =============================================================================
# SSL/TLS Configuration (for production)
# SSL_CERT_PATH=/path/to/ssl/certificate.crt
# SSL_KEY_PATH=/path/to/ssl/private.key
# FORCE_HTTPS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Data Protection
DATA_ENCRYPTION_ALGORITHM=aes-256-gcm
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=2555

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=2555

# =============================================================================
# VIDEO & AUDIO PROCESSING (Optional)
# =============================================================================
# Video Conferencing Integration
# ZOOM_API_KEY=your-zoom-api-key
# ZOOM_API_SECRET=your-zoom-api-secret

# Media Processing
FFMPEG_PATH=/usr/bin/ffmpeg
VIDEO_UPLOAD_MAX_SIZE=100mb
AUDIO_UPLOAD_MAX_SIZE=50mb

# =============================================================================
# ANALYTICS & BUSINESS INTELLIGENCE (Optional)
# =============================================================================
# Google Analytics
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
# MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER_SESSION=86400
CACHE_TTL_INTERVIEW_DATA=7200
CACHE_MAX_SIZE=1gb

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024
COMPRESSION_LEVEL=6

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true
API_DOCS_PATH=/api-docs

# Feature Flags
FEATURE_VIDEO_INTERVIEWS=true
FEATURE_AI_SCORING=true
FEATURE_MULTILINGUAL=true
FEATURE_REAL_TIME_ANALYTICS=true
FEATURE_ADVANCED_SECURITY=true
FEATURE_ATS_INTEGRATION=true

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Interview Settings
DEFAULT_INTERVIEW_DURATION=60
MAX_INTERVIEW_DURATION=180
MIN_INTERVIEW_DURATION=15
INTERVIEW_BUFFER_TIME=5
INTERVIEW_RECORDING_ENABLED=true

# Scoring Configuration
AI_SCORING_ENABLED=true
HUMAN_REVIEW_THRESHOLD=0.7
BIAS_CHECK_ENABLED=true

# Business Limits
MAX_CONCURRENT_INTERVIEWS_PER_USER=3
MAX_CANDIDATES_PER_COMPANY=10000
TRIAL_PERIOD_DAYS=14

# =============================================================================
# GETTING STARTED CHECKLIST
# =============================================================================
# 1. ✅ Copy this file to .env
# 2. ✅ Set up PostgreSQL database and update DATABASE_URL
