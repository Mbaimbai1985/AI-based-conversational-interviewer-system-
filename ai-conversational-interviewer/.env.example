QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# Job Processing
ENABLE_JOB_PROCESSING=true
JOB_CLEANUP_INTERVAL=3600000

# ===============================================
# üåä REAL-TIME FEATURES (OPTIONAL)
# ===============================================

# Socket.IO Configuration
SOCKETIO_ADAPTER=redis
SOCKETIO_REDIS_URL=redis://localhost:6379
SOCKETIO_CORS_ORIGIN=http://localhost:3000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# ===============================================
# üõ°Ô∏è SECURITY & COMPLIANCE (RECOMMENDED)
# ===============================================

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STORE=redis

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=false

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
COOKIE_CONSENT_REQUIRED=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_DESTINATION=database

# ===============================================
# ‚ö° PERFORMANCE OPTIMIZATION (RECOMMENDED)
# ===============================================

# Caching Strategy
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_PREFIX=ai_interviewer

# Database Query Optimization
DB_QUERY_TIMEOUT=10000
DB_SLOW_QUERY_THRESHOLD=1000

# API Response Optimization
API_COMPRESSION=true
API_ETAG_ENABLED=true
API_CACHE_CONTROL=private, max-age=300

# ===============================================
# üöÄ DEPLOYMENT & INFRASTRUCTURE (PRODUCTION)
# ===============================================

# Container Configuration
CONTAINER_PORT=3000
HEALTH_CHECK_ENDPOINT=/health
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# Load Balancer
LB_HEALTH_CHECK_PATH=/health
LB_STICKY_SESSIONS=false

# Scaling Configuration
AUTO_SCALING_ENABLED=false
MIN_INSTANCES=1
MAX_INSTANCES=10
CPU_THRESHOLD=80

# ===============================================
# üîç LOGGING & DEBUGGING
