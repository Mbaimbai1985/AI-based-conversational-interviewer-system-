# ==================================================================
# AI CONVERSATIONAL INTERVIEWER - ENVIRONMENT CONFIGURATION TEMPLATE
# ==================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control - it contains sensitive data!
# ==================================================================

# ==================================================================
# APPLICATION CONFIGURATION
# ==================================================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
APP_SECRET=generate-a-secure-256-bit-secret-key
SESSION_SECRET=generate-a-secure-session-secret

# ==================================================================
# DATABASE CONFIGURATION
# ==================================================================
# Primary PostgreSQL Database
DATABASE_URL="postgresql://username:password@localhost:5432/ai_interviewer"

# Database Connection Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# ==================================================================
# REDIS CACHE CONFIGURATION
# ==================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TTL=3600
REDIS_MAX_RETRIES=3

# ==================================================================
# AI/ML API CONFIGURATION
# ==================================================================
# OpenAI API (Primary AI Provider) - REQUIRED
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-organization-id
OPENAI_MODEL_GPT4=gpt-4-turbo-preview
OPENAI_MODEL_GPT35=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT=30000

# Azure OpenAI (Alternative)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Anthropic Claude (Alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000

# Google Translate API (For Multilingual Support)
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
GOOGLE_TRANSLATE_PROJECT_ID=your-gcp-project-id

# ==================================================================
# AUTHENTICATION & SECURITY
# ==================================================================
# NextAuth.js Configuration - REQUIRED
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secure-nextauth-secret
NEXTAUTH_URL_INTERNAL=http://localhost:3000

# JWT Configuration
JWT_SECRET=generate-a-secure-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Encryption & Security
ENCRYPTION_KEY=generate-a-32-byte-encryption-key
HASH_SALT_ROUNDS=12
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# ==================================================================
# EMAIL NOTIFICATION CONFIGURATION
# ==================================================================
# SendGrid (Recommended)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@your-domain.com
SENDGRID_FROM_NAME="AI Interviewer Platform"

# Mailgun (Alternative)
MAILGUN_API_KEY=key-your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.com
MAILGUN_FROM_EMAIL=noreply@your-domain.com

# AWS SES (Alternative)
AWS_SES_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@your-domain.com

# ==================================================================
# SMS NOTIFICATION CONFIGURATION
# ==================================================================
# Twilio (Recommended)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Nexmo/Vonage (Alternative)
NEXMO_API_KEY=your-nexmo-api-key
NEXMO_API_SECRET=your-nexmo-api-secret
NEXMO_FROM_NUMBER=+1234567890

# MessageBird (Alternative)
MESSAGEBIRD_API_KEY=your-messagebird-api-key
MESSAGEBIRD_ORIGINATOR=AI-Interview

# ==================================================================
# ATS INTEGRATION CONFIGURATION
# ==================================================================
# Greenhouse
GREENHOUSE_API_KEY=your-greenhouse-api-key
GREENHOUSE_WEBHOOK_SECRET=your-greenhouse-webhook-secret
GREENHOUSE_BASE_URL=https://harvest.greenhouse.io/v1

# Workday
WORKDAY_API_ENDPOINT=https://your-tenant.workday.com
WORKDAY_USERNAME=integration-user
WORKDAY_PASSWORD=your-workday-password
WORKDAY_TENANT=your-tenant-name

# BambooHR
BAMBOOHR_API_KEY=your-bamboohr-api-key
BAMBOOHR_SUBDOMAIN=your-company-subdomain

# Lever
LEVER_API_KEY=your-lever-api-key
LEVER_WEBHOOK_SECRET=your-lever-webhook-secret

# ==================================================================
# CLOUD STORAGE CONFIGURATION
# ==================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-ai-interviewer-bucket
AWS_S3_REGION=us-east-1

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project
GOOGLE_CLOUD_STORAGE_BUCKET=your-gcs-bucket
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=ai-interviewer-files

# ==================================================================
# WEBSOCKET & REAL-TIME CONFIGURATION
# ==================================================================
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000
SOCKET_IO_ORIGINS=http://localhost:3000
SOCKET_IO_TRANSPORTS=websocket,polling
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# ==================================================================
# ANALYTICS & MONITORING
# ==================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# Amplitude
AMPLITUDE_API_KEY=your-amplitude-api-key

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-application-insights-key

# ==================================================================
# WEBHOOK CONFIGURATION
# ==================================================================
WEBHOOK_SECRET=generate-a-webhook-secret
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000

# ==================================================================
# PERFORMANCE & OPTIMIZATION
# ==================================================================
# Caching Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400
CACHE_MAX_SIZE=1000000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# Compression
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# ==================================================================
# LOGGING CONFIGURATION
# ==================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5

# ==================================================================
# FEATURE FLAGS
# ==================================================================
ENABLE_ML_SCORING=true
ENABLE_BIAS_DETECTION=true
ENABLE_MULTILINGUAL=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_ATS_INTEGRATION=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_COMPLIANCE=true

# ==================================================================
# DEVELOPMENT & DEBUG CONFIGURATION
# ==================================================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ENABLE_DEV_TOOLS=true

# ==================================================================
# KUBERNETES & DEPLOYMENT (Production)
# ==================================================================
K8S_NAMESPACE=ai-interviewer
K8S_SERVICE_ACCOUNT=ai-interviewer-sa
K8S_CONFIG_MAP=ai-interviewer-config
K8S_SECRET=ai-interviewer-secrets
DEPLOYMENT_ENV=development

# ==================================================================
# BACKUP & DISASTER RECOVERY
# ==================================================================
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_ENCRYPTION_KEY=generate-backup-encryption-key

# ==================================================================
# COMPLIANCE & AUDIT
# ==================================================================
GDPR_COMPLIANCE_MODE=true
AUDIT_LOG_ENABLED=true
DATA_RETENTION_DAYS=2555
ANONYMIZATION_ENABLED=true
CONSENT_TRACKING_ENABLED=true

# ==================================================================
# TESTING CONFIGURATION
# ==================================================================
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost:5432/ai_interviewer_test"
TEST_OPENAI_API_KEY=sk-test-your-test-openai-key
ENABLE_TEST_MODE=false
MOCK_AI_RESPONSES=false