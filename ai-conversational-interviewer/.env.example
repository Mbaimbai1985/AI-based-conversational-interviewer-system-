# =============================================================================
# AI CONVERSATIONAL INTERVIEWER - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and replace placeholder values with your actual credentials.
# This file can be safely committed to version control as it contains no secrets.
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
HOSTNAME=localhost
PORT=3000
APP_URL=http://localhost:3000
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000

# =============================================================================
# SECURITY SECRETS (Generate strong random strings for production)
# =============================================================================
NEXTAUTH_SECRET=your-nextauth-secret-key-256-bits-minimum
APP_SECRET=your-super-secret-app-key
JWT_SECRET=your-jwt-secret-key-256-bits-minimum
SESSION_SECRET=your-session-secret-key-256-bits-minimum
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://username:password@localhost:5432/ai_interviewer

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# AI & NLP SERVICES (Required)
# =============================================================================
# OpenAI Configuration (Required for core AI functionality)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=
OPENAI_MODEL_GPT4=gpt-4-turbo-preview
OPENAI_MODEL_GPT35=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# Azure OpenAI (Alternative to OpenAI)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=

# Anthropic Claude (Alternative AI Provider)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Translate API (For multilingual support)
GOOGLE_TRANSLATE_API_KEY=

# =============================================================================
# AUTHENTICATION PROVIDERS
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft Azure AD
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# =============================================================================
# EMAIL SERVICES
# =============================================================================
# SendGrid (Recommended for production)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@your-domain.com
SENDGRID_FROM_NAME=AI Interviewer Platform

# Alternative Email Providers
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# AWS SES
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# SMS SERVICES
# =============================================================================
# Twilio (Primary SMS provider)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Alternative SMS Providers
NEXMO_API_KEY=
NEXMO_API_SECRET=

MESSAGEBIRD_API_KEY=

# =============================================================================
# ATS INTEGRATIONS
# =============================================================================
# Workday
WORKDAY_CLIENT_ID=
WORKDAY_CLIENT_SECRET=
WORKDAY_TENANT_URL=
WORKDAY_USERNAME=
WORKDAY_PASSWORD=

# Greenhouse
GREENHOUSE_API_KEY=
GREENHOUSE_BOARD_TOKEN=
GREENHOUSE_WEBHOOK_SECRET=

# BambooHR
BAMBOOHR_API_KEY=
BAMBOOHR_SUBDOMAIN=

# Lever
LEVER_API_KEY=
LEVER_WEBHOOK_SECRET=

# =============================================================================
# CLOUD STORAGE
# =============================================================================
# AWS S3
AWS_S3_BUCKET_NAME=
AWS_S3_REGION=us-east-1

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_STORAGE_BUCKET=

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER_NAME=

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Application Performance Monitoring
AMPLITUDE_API_KEY=
MIXPANEL_TOKEN=

# Error Tracking
SENTRY_DSN=

# Logging
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=

# =============================================================================
# WEBHOOK CONFIGURATIONS
# =============================================================================
# Global webhook settings
WEBHOOK_SECRET_KEY=your-global-webhook-secret-key
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3

# Custom webhook endpoints
CUSTOM_WEBHOOK_URL_1=
CUSTOM_WEBHOOK_URL_2=

# =============================================================================
# FEATURE FLAGS & TOGGLES
# =============================================================================
# Core Features
ENABLE_ML_SCORING=true
ENABLE_BIAS_DETECTION=true
ENABLE_MULTILINGUAL_SUPPORT=true
ENABLE_REAL_TIME_ANALYTICS=true

# Integration Features
ENABLE_ATS_INTEGRATION=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false

# Advanced Features
ENABLE_PERFORMANCE_OPTIMIZATION=true
ENABLE_ADVANCED_CACHING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_SECURITY_COMPLIANCE=true

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER_PROFILES=7200
CACHE_TTL_INTERVIEW_DATA=1800
CACHE_TTL_ANALYTICS=300

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# Database Connection Pooling
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# COMPLIANCE & SECURITY
# =============================================================================
# Data Encryption
ENCRYPTION_KEY=your-256-bit-encryption-key
ENCRYPTION_ALGORITHM=aes-256-gcm

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
COOKIE_CONSENT_REQUIRED=true

# Security Headers
ENABLE_HELMET_SECURITY=true
ENABLE_CORS_PROTECTION=true
ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development Mode Settings
DEBUG=ai-interviewer:*
LOG_LEVEL=debug
ENABLE_MOCK_DATA=true
ENABLE_TEST_ROUTES=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/ai_interviewer_test
TEST_REDIS_URL=redis://localhost:6380

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================
# Container/Kubernetes
K8S_NAMESPACE=ai-interviewer
K8S_SECRET=ai-interviewer-secrets

# Load Balancer
HEALTH_CHECK_PATH=/api/health
METRICS_PATH=/api/metrics

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Company Information
COMPANY_NAME=Your Company Name
COMPANY_DOMAIN=your-company.com
SUPPORT_EMAIL=support@your-company.com

# Interview Defaults
DEFAULT_INTERVIEW_DURATION=30
DEFAULT_QUESTIONS_PER_INTERVIEW=10
MAX_INTERVIEW_DURATION=120
MIN_INTERVIEW_DURATION=15

# Scoring Thresholds
PASSING_SCORE_THRESHOLD=70
EXCELLENT_SCORE_THRESHOLD=85
MINIMUM_RESPONSE_LENGTH=50

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 
# 1. Copy this file to .env: cp .env.example .env
# 2. Replace placeholder values with your actual credentials
# 3. At minimum, you MUST configure:
#    - DATABASE_URL (PostgreSQL connection)
#    - OPENAI_API_KEY (for AI functionality)
#    - NEXTAUTH_SECRET (for authentication)
#    - JWT_SECRET (for token signing)
# 4. Optional integrations can be configured as needed
# 5. Restart the application after making changes
# 
# For detailed setup instructions, see CONFIGURATION.md
# =============================================================================