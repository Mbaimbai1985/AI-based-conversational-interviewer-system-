LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10mb
LOG_MAX_FILES=5

# Debug Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false
SQL_LOGGING=false

