# ====================================================================
# AI CONVERSATIONAL INTERVIEWER - ENVIRONMENT CONFIGURATION TEMPLATE
# ====================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env with real credentials to version control

# ====================================================================
# CORE APPLICATION SETTINGS
# ====================================================================
NODE_ENV=development
PORT=3000
APP_NAME="AI Conversational Interviewer"
APP_VERSION=1.0.0
BASE_URL=http://localhost:3000

# ====================================================================
# PHASE 2: NATURAL LANGUAGE PROCESSING FOUNDATION
# ====================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_REQUEST_TIMEOUT=30000

# Alternative AI Providers
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# NLU Configuration
INTENT_CONFIDENCE_THRESHOLD=0.75
ENTITY_EXTRACTION_ENABLED=true
SENTIMENT_ANALYSIS_ENABLED=true
CONTEXT_WINDOW_SIZE=10

# ====================================================================
# PHASE 3: CANDIDATE PROFILE & SCORING SYSTEM
# ====================================================================

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/ai_interviewer_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_interviewer_db
DB_USERNAME=username
DB_PASSWORD=password
DB_SSL=false
DB_CONNECTION_LIMIT=20

# Prisma Configuration
PRISMA_SCHEMA_PATH=./prisma/schema.prisma
DATABASE_MIGRATION_ENABLED=true

# Scoring Engine Configuration
SCORING_ENGINE_TYPE=rule_based
SKILL_RELEVANCE_WEIGHT=0.4
COMMUNICATION_CLARITY_WEIGHT=0.3
RESPONSE_COMPLETENESS_WEIGHT=0.3
MIN_SCORE_THRESHOLD=60

# ====================================================================
# PHASE 4: ADVANCED DIALOGUE MANAGEMENT
# ====================================================================

# Conversation Flow Configuration
MAX_CONVERSATION_DURATION=3600000
QUESTION_TIMEOUT=300000
ADAPTIVE_QUESTIONING_ENABLED=true
BRANCH_LOGIC_ENABLED=true
TOPIC_TRANSITION_THRESHOLD=3

# Natural Language Generation
NLG_TONE_CUSTOMIZATION=true
COMPANY_CULTURE_ADAPTATION=true
PERSONALIZED_MESSAGING=true
RESPONSE_VARIATION_COUNT=3

# Quality Control
RESPONSE_VALIDATION_ENABLED=true
TOPIC_RELEVANCE_THRESHOLD=0.8
DURATION_WARNING_THRESHOLD=2700000
ERROR_RECOVERY_ATTEMPTS=3

# ====================================================================
# PHASE 5: RECRUITER DASHBOARD & MANAGEMENT
# ====================================================================

# Dashboard Configuration
REAL_TIME_UPDATES=true
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3001
REFRESH_INTERVAL=5000

# Interview Management
TRANSCRIPT_STORAGE_ENABLED=true
CANDIDATE_COMPARISON_ENABLED=true
SHORTLIST_GENERATION_ENABLED=true
EXPORT_FORMATS=pdf,csv,json

# Customization
RUBRIC_EDITOR_ENABLED=true
TEMPLATE_MANAGEMENT_ENABLED=true
ROLE_SPECIFIC_SETTINGS=true
CUSTOM_SCORING_CRITERIA=true

# ====================================================================
# PHASE 6: ADVANCED SCORING & ANALYTICS
# ====================================================================

# Machine Learning Configuration
ML_SCORING_ENABLED=true
ML_MODEL_TYPE=random_forest
MODEL_TRAINING_ENABLED=false
BEHAVIORAL_ANALYSIS_ENABLED=true
PREDICTIVE_SCORING_ENABLED=true

# ML Model Files
ML_MODEL_PATH=./models/scoring_model.pkl
BEHAVIORAL_MODEL_PATH=./models/behavioral_model.pkl
PERFORMANCE_MODEL_PATH=./models/performance_model.pkl

# Bias Detection
BIAS_DETECTION_ENABLED=true
FAIRNESS_METRICS_ENABLED=true
BIAS_ALERT_THRESHOLD=0.15
CORRECTION_SUGGESTIONS_ENABLED=true

# Analytics
ANALYTICS_ENABLED=true
PERFORMANCE_METRICS_ENABLED=true
SUCCESS_TRACKING_ENABLED=true
ROI_CALCULATIONS_ENABLED=true

# ====================================================================
# PHASE 7: INTEGRATION & AUTOMATION
# ====================================================================

# ATS Integration
ATS_INTEGRATION_ENABLED=true
WORKDAY_API_ENABLED=false
GREENHOUSE_API_ENABLED=false
BAMBOOHR_API_ENABLED=false

# Workday Configuration
WORKDAY_TENANT_URL=https://your-tenant.workday.com
WORKDAY_USERNAME=your_workday_username
WORKDAY_PASSWORD=your_workday_password
WORKDAY_CLIENT_ID=your_workday_client_id
WORKDAY_CLIENT_SECRET=your_workday_client_secret

# Greenhouse Configuration
GREENHOUSE_API_KEY=your_greenhouse_api_key
GREENHOUSE_BASE_URL=https://harvest.greenhouse.io/v1

# BambooHR Configuration
BAMBOOHR_API_KEY=your_bamboohr_api_key
BAMBOOHR_SUBDOMAIN=your_company_subdomain

# Notification System
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true
IN_APP_NOTIFICATIONS_ENABLED=true
WEBHOOK_NOTIFICATIONS_ENABLED=true

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourcompany.com
SENDGRID_FROM_NAME="AI Interviewer System"

# Alternative Email Providers
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.yourcompany.com
AWS_SES_ACCESS_KEY=AKIA...
AWS_SES_SECRET_KEY=your_aws_ses_secret_key
AWS_SES_REGION=us-east-1

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Alternative SMS Providers
NEXMO_API_KEY=your_nexmo_api_key
NEXMO_API_SECRET=your_nexmo_api_secret
MESSAGEBIRD_API_KEY=your_messagebird_api_key

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_key_here
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3

# Workflow Automation
AUTO_SCHEDULING_ENABLED=true
FOLLOW_UP_AUTOMATION_ENABLED=true
REPORT_GENERATION_ENABLED=true
SHORTLIST_AUTOMATION_ENABLED=true

# ====================================================================
# PHASE 8: ADVANCED FEATURES & OPTIMIZATION
# ====================================================================

# Multilingual Support
MULTILINGUAL_ENABLED=true
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,zh,ja,ko,ar,hi,ru
LANGUAGE_DETECTION_ENABLED=true
CULTURAL_ADAPTATION_ENABLED=true

# Translation Services
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
AZURE_TRANSLATOR_KEY=your_azure_translator_key
AZURE_TRANSLATOR_REGION=global

# Performance Optimization
CACHING_ENABLED=true
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Database Optimization
DB_CONNECTION_POOLING=true
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_QUERY_TIMEOUT=30000
DB_INDEXING_ENABLED=true

# API Optimization
API_COMPRESSION_ENABLED=true
API_PAGINATION_ENABLED=true
API_BATCH_SIZE=50
API_RATE_LIMITING=true
API_RATE_LIMIT=1000

# Performance Monitoring
MONITORING_ENABLED=true
PERFORMANCE_LOGGING=true
METRICS_COLLECTION=true
HEALTH_CHECK_ENABLED=true

# ====================================================================
# SECURITY & COMPLIANCE
# ====================================================================

# Authentication & Authorization
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_256_chars
JWT_EXPIRES_IN=24h
SESSION_SECRET=your_session_secret_key_here_min_256_chars
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_min_256_chars

# Zero Trust Security
ZERO_TRUST_ENABLED=true
ADAPTIVE_AUTH_ENABLED=true
MFA_ENABLED=true
SESSION_TIMEOUT=3600000

# Data Encryption
ENCRYPTION_ENABLED=true
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_KEY=your_256_bit_encryption_key_here_exactly_32_chars
HSM_ENABLED=false
HSM_ENDPOINT=your_hsm_endpoint
QUANTUM_RESISTANT_ENABLED=false

# GDPR Compliance
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555
CONSENT_MANAGEMENT_ENABLED=true
RIGHT_TO_DELETION_ENABLED=true
DATA_PORTABILITY_ENABLED=true

# Audit Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_IMMUTABLE_LOGGING=true
BLOCKCHAIN_INTEGRITY=false
LOG_RETENTION_DAYS=2555

# Access Control
RBAC_ENABLED=true
PERMISSION_SYSTEM=role_based
ACCESS_LOG_ENABLED=true
FAILED_LOGIN_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION=900000

# ====================================================================
# CLOUD & INFRASTRUCTURE
# ====================================================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your-ai-interviewer-bucket

# File Storage
FILE_STORAGE_PROVIDER=aws_s3
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg
FILE_UPLOAD_PATH=./uploads

# CDN Configuration
CDN_ENABLED=false
CDN_URL=https://cdn.yourcompany.com
STATIC_ASSETS_CDN=true

# ====================================================================
# MONITORING & LOGGING
# ====================================================================

# Application Monitoring
APM_ENABLED=false
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
DATADOG_API_KEY=your_datadog_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
ERROR_REPORTING_ENABLED=true

# ====================================================================
# DEVELOPMENT & TESTING
# ====================================================================

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
DEV_TOOLS_ENABLED=false
HOT_RELOAD_ENABLED=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_ai_interviewer_db
TEST_OPENAI_API_KEY=sk-test_your_test_openai_api_key
MOCK_SERVICES_ENABLED=false

# Seeding
DATABASE_SEEDING_ENABLED=false
